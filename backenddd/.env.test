# Test environment configuration
APP_ENV=test
APP_DEBUG=true
APP_SECRET=your-test-secret-key-here

# Database configuration for tests
DATABASE_URL="postgresql://root:root@postgres_test:5432/app_test"

# JWT Configuration
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=

# CORS Configuration
CORS_ALLOW_ORIGIN='^https?://(localhost|127\.0\.0\.1)(:[0-9]+)?$'

# Mailer configuration (use null transport for tests)
MAILER_DSN=null://null

# Cache configuration
CACHE_ADAPTER=array

# Session configuration
SESSION_HANDLER=array

# Disable deprecation warnings in tests
SYMFONY_DEPRECATIONS_HELPER=weak